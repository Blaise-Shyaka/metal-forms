<%= form_for @user do |f| %>
  <h2><%= f.label :username, 'Enter username' %><h2>
  <%= f.text_field :username, placeholder: "At least 4 characters"%><br />
  <h2><%= f.label :username, 'Enter email' %><h2>
  <%= f.email_field :email, placeholder: "user@mail.com"%><br />
  <h2><%= f.label :username, 'Enter password' %><h2>
  <%= f.password_field :password, placeholder: "At least 6 characters"%><br />
  <%= f.submit %>
<% end %>